@model ASPcorePhongBan.Models.NhanVien.NhanVienEdit

@{
    ViewData["Title"] = "EditNV";
    var phongBans = new List<PhongBanEdit>();
    phongBans = ViewBag.PhongBans;
}

<h1 style="color:crimson;font-family:'Times New Roman'">Chỉnh Sửa Thông Tin Nhân Viên</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditNV">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenNV" class="control-label"></label>
                <input asp-for="TenNV" class="form-control" />
                <span asp-validation-for="TenNV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="control-label"></label>
                <input asp-for="NgaySinh" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhongID" class="control-label"></label>
                <select asp-for="PhongID" class="form-control">
                    @foreach (var item in phongBans)
                    {
                        <option value="@item.PhongID">@item.TenPhong</option>
                    }

                </select>
                <span asp-validation-for="PhongID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
