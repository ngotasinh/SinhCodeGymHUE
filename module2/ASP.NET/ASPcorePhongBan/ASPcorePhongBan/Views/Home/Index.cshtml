@model IEnumerable<ASPcorePhongBan.Models.PhongBanView>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh Sách Phòng Ban</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhongID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenPhong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongNV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDelete)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhongID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenPhong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDelete)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PhongID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PhongID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PhongID }) |
                @Html.ActionLink("NhanVien", "NhanVien", new { id = item.PhongID })
            </td>
        </tr>
}
    </tbody>
</table>
